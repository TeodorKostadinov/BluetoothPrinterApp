<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3aaa">


    <EditText
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center_vertical|top"
        android:hint="@string/set_seller_web"
        android:text="@string/txt_content"
        android:textSize="25sp">

    </EditText>

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/txt_remember_web"/>


    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <Button
        android:id="@+id/btn_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_open"
        android:layout_margin="4dp"
        android:layout_weight="0.1"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@drawable/button_selector"
        android:elevation="4dp">

    </Button>

    <Button
        android:id="@+id/btn_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_print"
        android:layout_weight="0.1"
        android:elevation="2dp"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        android:background="@drawable/button_selector"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_disconnect"
        android:layout_weight="0.1"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        android:background="@drawable/button_selector"/>
</LinearLayout>
